# FARUNOVA - Apache Configuration

# Enable mod_rewrite for URL routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    # If your site is in the web root, use: RewriteBase /
    # If your site is in a subdirectory, use: RewriteBase /subdirectory/
    RewriteBase /
    
    # Don't rewrite if it's a real file
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirect HTTP to HTTPS in production (uncomment when using HTTPS)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Disable directory listing
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# PHP Configuration
<IfModule mod_php.c>
    # Set error reporting (development)
    php_flag display_errors off
    php_flag log_errors on
    php_value error_log "logs/php_errors.log"
    
    # Set upload limits
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    
    # Session security
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.cookie_samesite "Strict"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE text/css
</IfModule>

# Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# IMPORTANT: Allow all PHP files to be accessed directly (Apache will serve them)
# This is necessary because users need to visit /login.php, /signup.php, etc.
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

# Block direct access to sensitive configuration files ONLY
<FilesMatch "^(connection|security|email_config)\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Block access to database schema and documentation
<FilesMatch "\.(sql|env|config)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Block access to sensitive directories
<DirectoryMatch "^/(lib|cache|logs|\.git)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</DirectoryMatch>
